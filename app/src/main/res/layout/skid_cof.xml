<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="196dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linelay"
        android:layout_width="125dp"
        android:layout_height="186dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/img_coffee"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/espres"/>
    <TextView
        android:id="@+id/name_coffee_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_coffee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        />
        <TextView
        android:id="@+id/txt_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_coffee_txt"

        android:gravity="center"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>